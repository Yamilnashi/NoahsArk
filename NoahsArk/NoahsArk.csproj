    <None Remove="Content\Tiled\GameMaps\test.tmx" />
    <None Remove="Content\Tiled\Tilesets\full.tsx" />
    <None Remove="Content\Tiled\Tilesets\tileset_buildings_floors.png" />
    <None Remove="Content\Tiled\Tilesets\tileset_buildings_floors.tsx" />
    <None Remove="Content\Tiled\Tilesets\tileset_buildings_props.png" />
    <None Remove="Content\Tiled\Tilesets\tileset_buildings_props.tsx" />
    <None Remove="Content\Tiled\Tilesets\tileset_buildings_roofs.png" />
    <None Remove="Content\Tiled\Tilesets\tileset_buildings_roofs.tsx" />
    <None Remove="Content\Tiled\Tilesets\tileset_buildings_shadows.png" />
    <None Remove="Content\Tiled\Tilesets\tileset_buildings_shadows.tsx" />
    <None Remove="Content\Tiled\Tilesets\tileset_buildings_walls.png" />
    <None Remove="Content\Tiled\Tilesets\tileset_buildings_walls.tsx" />
    <None Remove="Content\Tiled\Tilesets\tileset_clouds.tsx" />
    <None Remove="Content\Tiled\Tilesets\tileset_floors.tsx" />
    <None Remove="Content\Tiled\Tilesets\tileset_vegetation.tsx" />
    <None Remove="Content\Tiled\Tilesets\vegetation.tsx" />
    <None Remove="Icon.ico" />
    <None Remove="Icon.bmp" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="Content\Assets\GameData\Players\player-data.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Content\Tiled\GameMaps\development.tmx">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Content\Tiled\GameMaps\home.tmx">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
