      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Content\Tiled\Tilesets\full.tsx">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Content\Tiled\Tilesets\tileset_buildings_floors.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Content\Tiled\Tilesets\tileset_buildings_floors.tsx">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
